generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@map("user")
}

model Client {
  id      String @id @default(dbgenerated("(concat('client_', gen_random_uuid()))::TEXT"))
  name    String
  email   String @unique
  cpfCnpj String @unique

  soloCoinBalance Float @default(0)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  inverters Inverter[]

  @@index([email])
  @@index([cpfCnpj])
  @@map("client")
}

model Inverter {
  id String @id @default(dbgenerated("(concat('inverter_', gen_random_uuid()))::TEXT"))

  provider          String
  providerId        String
  providerApiKey    String?
  providerApiSecret String?
  providerUrl       String?

  client   Client @relation(fields: [clientId], references: [id])
  clientId String

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  deletedAt       DateTime?
  generationUnits GenerationUnit[]

  @@index([providerId])
  @@map("inverter")
}

model GenerationUnit {
  id String @id @default(dbgenerated("(concat('generation_unit_', gen_random_uuid()))::TEXT"))

  power  Float
  energy Float

  generationUnitType String @default("real_time")

  timestamp DateTime @default(now())

  inverter   Inverter @relation(fields: [inverterId], references: [id])
  inverterId String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([inverterId])
  @@index([inverterId, generationUnitType])
  @@index([inverterId, generationUnitType, timestamp])
  @@map("generation_unit")
}
